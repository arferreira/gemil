<div class="container-fluid">
<br />
<% if notice%>
<p id="notice" class="alert alert-warning"><%= notice %></p>
<% end %>
  <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Dependentes</h3>
                            </div>
                            <div class="panel-body">
                             <div class="table-responsive">

  <div class="form-group has-success">
  <%= search_form_for @q do |f| %>
  <%= f.label "Busca", :class => 'control-label' %><br />
  <%= f.search_field :pescodigo_cont, :placeholder => 'Informe o Saram', :class => 'form-control'  %> <br />
  <%= f.submit "Buscar", :class => 'btn btn-success', :style => 'float:right;' %><br />
  <% end %>
</div>
<br />
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Nome completo</th>
      <th>Responsável Saram</th>
      <th>Responsável Crachá</th>
      <th>Crachá</th>
      <th>Validade Crachá</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @dependents.each do |dependent| %>
      <tr>
        <td><%= dependent.pesdepnome %></td>
        <td><%= dependent.pescodigo %></td>
        <td><%= dependent.pesdeppesid %></td>
        <td><%= dependent.pes_cracha_id %></td>
        <td><%= dependent.pes_cracha_val %></td>

        <td><%= link_to 'Editar', edit_dependent_path(dependent) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center><%= will_paginate @people, :previous_label => "&laquo; Anterior", :next_label => "Próxima &raquo;", :page_gap => "......" %></center><br />


<%= link_to 'Novo Dependente', new_dependent_path, :class => 'btn btn-success' %>
